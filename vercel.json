{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/next"
    },
    {
      "src": "backend/server.js",
      "use": "@vercel/node",
      "config": { "includeFiles": ["backend/**"] }
    }
  ],
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "backend/server.js"
    },
    {
      "source": "/((?!api).*)",
      "destination": "/frontend/$1"
    }
  ]
}